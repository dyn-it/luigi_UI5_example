{
  "name": "luigi-example-openui5",
  "private": true,
  "version": "0.2.0",
  "author": "SAP SE",
  "description": "Luigi with OpenUI5 Demo App",
  "engines": {
    "node": "^18 || ^20"
  },
  "scripts": {
    "build": "ui5 build --clean-dest --all",
    "build:cf": "ui5 build --clean-dest --all && cp xs-app.json dist && cd dist && npx bestzip ../resources/luigi.zip *",
    "start": "fiori run --open 'index.html'",
    "serve": "ws --compress -d dist",
    "deploy": "npm run build && fiori deploy --config ui5-deploy.yaml && rimraf archive.zip"
  },
  "dependencies": {
    "@luigi-project/client": "^2.18.0",
    "@luigi-project/core": "^2.18.0",
    "@sap/html5-repo-mock": "2.1.1",
    "@sap/ux-specification": "latest",
    "@sap/ux-ui5-tooling": "1.7.6",
    "@ui5/cli": "3.11.6",
    "@ui5/fs": "^2.0.6",
    "@ui5/logger": "^2.0.1",
    "bestzip": "^2.2.0",
    "cross-spawn": "^7.0.6",
    "express": "^4.21.2",
    "fiori-tools": "^1.3.0",
    "local-web-server": "^5.4.0",
    "mbt": "^1.0.15",
    "rimraf": "3.0.2",
    "ui5-task-zipper": "^0.3.1"
  },
  "devDependencies": {
    "ui5-tooling-modules": "^3.24.10"
  }
}
